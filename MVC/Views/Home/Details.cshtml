@model MVC.Models.ViewModels.CategoryDetailsViewModel
@{
    ViewBag.Title = "Details";
}

<h2>Category Details</h2>
<div class="form well">
    <fieldset>
        <legend>Categories</legend>
        <div class="control-group">
            <div class="display-label">
                <strong>@Html.DisplayNameFor(model => model.CategoryData.CategoryID)</strong>
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.CategoryData.CategoryID)
            </div>
        </div>
        <div class="control-group">
            <div class="display-label">
                <strong>@Html.DisplayNameFor(model => model.CategoryData.CategoryName)</strong>
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.CategoryData.CategoryName)
            </div>
        </div>
        <div class="control-group">
            <div class="display-label">
                <strong>@Html.DisplayNameFor(model => model.CategoryData.Description)</strong>
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.CategoryData.Description)
            </div>
        </div>
        <div class="control-group">
            <div class="display-label">
                <strong>@Html.DisplayNameFor(model => model.CategoryData.Picture)</strong>
            </div>
            <div class="display-field">
                <img src="@Url.Action("GetImage","Home",new { id = Model.CategoryData.CategoryID  },"http")" />
            </div>
        </div>
    </fieldset>
</div>
<div class="form-actions">
    @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryData.CategoryID }, new { @class = "btn" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn" })
</div>
<h3>Category's Products</h3>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr style="background-color: #E8EEF4;">
            <td>
                    @Html.DisplayNameFor(item => item.ProductCollection.First().ProductID)
                </td>
                <td>
                    @Html.DisplayNameFor(item => item.ProductCollection.First().ProductName)
                </td>
                <td>
                    @Html.DisplayNameFor(item => item.ProductCollection.First().SupplierID)
                </td>
                <td>
                    @Html.DisplayNameFor(item => item.ProductCollection.First().CategoryID)
                </td>
                <td>
                    @Html.DisplayNameFor(item => item.ProductCollection.First().QuantityPerUnit)
                </td>
                <td>
                    @Html.DisplayNameFor(item => item.ProductCollection.First().UnitPrice)
                </td>
                <td>
                    @Html.DisplayNameFor(item => item.ProductCollection.First().UnitsInStock)
                </td>
                <td>
                    @Html.DisplayNameFor(item => item.ProductCollection.First().UnitsOnOrder)
                </td>
                <td>
                    @Html.DisplayNameFor(item => item.ProductCollection.First().ReorderLevel)
                </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProductCollection)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplierID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantityPerUnit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitsInStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitsOnOrder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReorderLevel)
                </td>
            </tr>
        }
    </tbody>
</table>

